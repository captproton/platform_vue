<% label_classes="block text-sm font-bold mb-2 #{alert ? " text-red-500" : "text-gray-700" }"
    input_classes="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{alert ? "
    border-red-500" : nil}" %>

<section class="section">
  <div class="columns is-centered">
    <div class="column is-4">
      <%= form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'put'}, :id => 'activation-form' do |f| %>
        <%= devise_error_messages! %>
        <h4 class="subtitle is-3">Account Activation<% if resource.try(:user_name) %> for <%= resource.user_name %><% end %></h4>
        <% if @requires_password %>
            <div class="field">
                <div class="control">
                <%= f.label :password,'Choose a Password:', class: label_classes %>
                    <%= f.password_field :password, class: input_classes %>
                </div>
            </div>
            <div class="field">
                <div class="control">
                <%= f.label :password_confirmation,'Password Confirmation:', class: label_classes %>
                    <%= f.password_field :password_confirmation, class: input_classes  %>
                </div>
            </div>
        <% end %>
        <%= hidden_field_tag :confirmation_token,@confirmation_token %>
        <div class="field">
            <div class="control">
            <%= f.submit "Activate", 
                class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mr-6 rounded focus:outline-none focus:shadow-outline"
            %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</section>